<!-- MainWindow.xaml -->
<Window x:Class="RC5WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RC5 Шифрування (варіант 1)"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Background="#00000000">

    <!-- 🔸 Стилі -->
    <Window.Resources>
        <!-- Текстові поля -->
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#667EEA"/>
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Поле пароля -->
        <Style TargetType="PasswordBox">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#667EEA"/>
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Кнопки -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопка закриття -->
        <Style TargetType="Button" x:Key="CloseButtonStyle">
            <Setter Property="Background" Value="#FF6B6B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Картка -->
        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="5" BlurRadius="15" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 🔸 Макет -->
    <Grid Margin="20">
        <!-- Фон градієнт -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667EEA" Offset="0"/>
                <GradientStop Color="#764BA2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔹 Верхня панель -->
        <Grid Grid.Row="0">
            <TextBlock Text="RC5 Шифрування файлів" FontSize="28" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Style="{StaticResource CloseButtonStyle}" Content="X"
                    HorizontalAlignment="Right" Click="CloseButton_Click"/>
        </Grid>

        <!-- 🔹 Основна картка -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <StackPanel Margin="20">

                <TextBlock Text="Парольна фраза:" FontSize="16" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox"/>

                <TextBlock Text="Вхідний файл:" FontSize="16" FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="InputFileTextBox" IsReadOnly="True"/>
                    <Button Grid.Column="1" Content="Обрати" Click="BrowseInput_Click"/>
                </Grid>

                <TextBlock Text="Вихідний файл:" FontSize="16" FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="OutputFileTextBox" IsReadOnly="True"/>
                    <Button Grid.Column="1" Content="Обрати" Click="BrowseOutput_Click"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="🔒 Зашифрувати" Click="EncryptButton_Click"/>
                    <Button Content="🔓 Розшифрувати" Click="DecryptButton_Click"/>
                    <Button Content="🧹 Очистити" Click="ClearButton_Click"/>
                </StackPanel>

                <TextBlock Text="Статус:" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBox x:Name="StatusTextBlock" Text="Готово до роботи" 
                         Background="#F1F3F5" IsReadOnly="True" FontFamily="Consolas"
                         Padding="10" Height="60" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
